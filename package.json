{
    "name": "studentrant",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "type": "module",
    "scripts": {
	"test"         : "docker-compose --file docker/docker-compose.test.yml up -d --remove-orphans && ./scripts/run-test.sh",
	"test:e2e"     : "cross-env NODE_ENV=test ./scripts/setup-test.sh ; npm run coverage:e2e",
	"coverage:e2e" : "cross-env NODE_ENV=test nyc node ./.jasmine-run-e2e.js ./.jasmine.e2e.json ./__test__/**/*.mjs",
	"test:unit"    : "npm run coverage:unit",
	"coverage:unit": "cross-env NODE_ENV=test nyc node ./.jasmine-run-unit.js ./.jasmine.unit.json './src/**/*.mjs'",
	"db:drop"      : "docker-compose -f docker/docker-compose.dev.yml down --remove-orphans",
	"docker:down"  : "docker-compose -f docker/docker-compose.dev.yml -f docker/docker-compose.test.yml down --remove-orphans",
	"docker:up"    : "docker-compose -f docker/docker-compose.dev.yml up -d  && ./scripts/replica-setup.sh",
	"db:start"     : "docker-compose start",
	"db:stop"      : "docker-compose kill",
	"start:dev"    : "node src/server.js --env dev",
	"start:dev:watch": "nodemon --exec node src/server.js --env dev",
	"lint"           : "eslint '**/*.js'",
	"lint:fix"       : "eslint --fix '**/*.js'",
	"doc"            : "apidoc -i doc/ -o html-doc/",
	"doc:watch"      : "nodemon --watch doc/ --exec npm run doc"
    },
    "husky": {
	"hooks": {
	    "pre-push": "npm test ; npm run lint",
	    "pre-commit": "npm test ; npm run lint"
	}
    },
    "repository": {
	"type": "git",
	"url": "git+https://github.com/studentrant/studentrant.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
	"url": "https://github.com/studentrant/studentrant/issues"
    },
    "homepage": "https://github.com/studentrant/studentrant#readme",
    "dependencies": {
	"@sendgrid/mail": "^6.5.5",
	"bcryptjs": "^2.4.3",
	"better-logging": "^4.3.0",
	"body-parser": "^1.19.0",
	"connect-mongodb-session": "^2.3.3",
	"convict": "^5.2.0",
	"cors": "^2.8.5",
	"diff": "^4.0.2",
	"express": "^4.17.1",
	"express-session": "^1.17.1",
	"express-validator": "^6.6.0",
	"helmet": "^3.23.3",
	"log4js": "^6.3.0",
	"mongoose": "^5.9.21",
	"node-fetch": "^2.6.0",
	"sendgrid": "^5.2.3",
	"supertest": "^4.0.2",
	"uid-generator": "^2.0.0",
	"uuid": "^8.2.0"
    },
    "devDependencies": {
	"apidoc": "^0.20.1",
	"async": "^3.2.0",
	"babel-eslint": "^10.1.0",
	"coveralls": "^3.1.0",
	"cross-env": "^7.0.2",
	"eslint": "^6.8.0",
	"esm": "^3.2.25",
	"faker": "^4.1.0",
	"husky": "^4.2.5",
	"jasmine": "^3.5.0",
	"jasmine-spec-reporter": "^4.2.1",
	"nodemon": "^2.0.4",
	"nyc": "^15.1.0"
    }
}
